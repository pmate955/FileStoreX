<br><br><br>
<div class="login-form">
  <div class="main-div">
    <div class="panel">
      <h4><%= t('menu.log')%></h4>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <form id="Login">

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", id:"inputEmail", placeholder:t('register.email') %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"inputPassword", placeholder:t('form1.pas1') %>
      </div>
      <div class="forgot">
        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>
      </div>
      <%= f.submit t('login.login'), class:"btn btn-primary" %>
      <%= render "devise/shared/links" %>
    </form>
    <% end %>
  </div>
  <% flash.each do |key, value| %>
      <div class="alert alert-info" role="alert">
        <%= value %>
      </div>
  <% end %>
</div>


