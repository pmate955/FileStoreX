<br><br><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="row centered-form">
  <div class="main-div">
    <div class="panel">
      <div class="panel-heading">
        <h3 class="panel-title">Register <br> <small>It's free!</small></h3>
      </div>
      <div class="panel-body">
        <form role="form">
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= f.text_field :firstName,class:"form-control input-sm", placeholder:"First Name"  %>
              </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= f.text_field :lastName,class:"form-control input-sm", placeholder:"Last Name"  %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-sm", placeholder:"Email Address" %>
          </div>

          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">

                <%= f.password_field  :password, autocomplete: "new-password", class: "form-control input-sm" , placeholder:"Password"%> </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
              <div class="form-group">
                <%= f.password_field   :password_confirmation, autocomplete: "new-password", class: "form-control input-sm",placeholder:"Confirm Password" %>
             </div>
            </div>
          </div>

          <%= f.submit "Sign up", class: "btn btn-info btn-block" %>
          <%= devise_error_messages! %>
        </form>
      </div>
    </div>
  </div>
</div>

<% end %>
