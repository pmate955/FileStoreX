<div id="form-con" class = "container mt-2">
  <div class="row">
    <div class="col">
      <h1 class="mx-auto my-0">Upload your file! </h1>
        <%= form_tag("/file/uploadFile", method: "post", multipart: true) do %>
        <div class="form-group">
          <label for="isEncrypt">What do you want?</label>
          <%= select_tag(:isEncrypt, options_for_select([['Encrypt', 1], ['Decrypt',  2]]), class:"form-control") %>
        </div>
        <div class="form-group">
          <label for="selectedFile">Your file (maximum 50 MB)</label>
          <%= file_field 'selectedFile', 'datafile', class:'form-control-file', :required=>true %>
        </div>
        <div class="form-group">
          <label for="passw1">Password</label>
          <%= password_field_tag 'passw1',nil,  class:'form-control', :required=>true %>
        </div>
        <div class="form-group">
          <label for="passw2">Password again</label>
           <%= password_field_tag 'passw2',nil,  class:'form-control', :required=>true  %>
        </div>
        <div class="form-group">
          <%= submit_tag("Upload",class: "btn btn-primary" ) %>
        </div>
          <% flash.each do |key, value| %>
              <div class="alert alert-danger" role="alert">
                <%= value %>
              </div>
          <% end %>
      <%end%>
    </div>
  </div>
</div>
